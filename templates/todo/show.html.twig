{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <h1>Todo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.Name }}</td>
            </tr>
            <tr>
                <th>Beschreibung</th>
                <td>{{ todo.Description }}</td>
            </tr>
            <tr>
                <th>Erstellungsdatum</th>
                <td>{{ todo.CreationDate ? todo.CreationDate|date('d.m.Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Fälligkeitsdatum</th>
                <td>{{ todo.DueDate ? todo.DueDate|date('d.m.Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('todo_edit', {'id': todo.id}) }}">Bearbeiten</a>
    <a class="btn btn-secondary"  href="{{ path('todo_index') }}">Zurück zur Übersicht</a>

    {{ include('todo/_delete_form.html.twig') }}
{% endblock %}
