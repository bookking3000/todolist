<form method="post" action="{{ path('todo_category_delete', {'id': todo_category.id}) }}" onsubmit="return confirm('Wollen Sie die Kategorie {{ todo_category.name }} wirklich löschen');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo_category.id) }}">
    <button class="btn btn-danger mt-2">Löschen</button>
</form>
