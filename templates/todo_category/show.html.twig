{% extends 'base.html.twig' %}

{% block title %}TodoCategory{% endblock %}

{% block body %}
    <h1>Kategorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo_category.Name }}</td>
            </tr>
            <tr>
                <th>Erstellungsdatum</th>
                <td>{{ todo_category.createdAt ? todo_category.createdAt|date('d.m.Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Letzte Änderung</th>
                <td>{{ todo_category.editedAt ? todo_category.editedAt|date('d.m.Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('todo_category_index') }}">Zurück zur Übersicht</a>
    <a class="btn btn-secondary" href="{{ path('todo_category_edit', {'id': todo_category.id}) }}">Bearbeiten</a>

    {{ include('todo_category/_delete_form.html.twig') }}
{% endblock %}
